<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Minecraft</title>
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bulma@0.9.4/css/bulma.min.css"
    />
  </head>
  <body>
    <nav class="navbar" role="navigation" aria-label="main navigation">
      <div class="navbar-brand">
        <a class="navbar-item" href="/construcciones">
          <img
            src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcT27Ahugh_giimXgC5jzZNAIdsZGxqjA-bvxw-4gRbBfF8evxX2rYwG4eI_fRiurOTiZ_c&usqp=CAU"
            width="112"
            height="28"
          />
        </a>

        <a
          role="button"
          class="navbar-burger"
          aria-label="menu"
          aria-expanded="false"
          data-target="navbarBasicExample"
        >
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
          <span aria-hidden="true"></span>
        </a>
      </div>

      <div id="navbarBasicExample" class="navbar-menu">
        <div class="navbar-start">
          <% for (let funcion of permisos) { %>
                    <% if (funcion.funcion == 'ver') { %>
                    <a class="navbar-item" href="/construcciones">
                        Construcciones
                    </a>
                    <% } %>
                
                    <% if (funcion.funcion == 'construir') { %>
                    <a class="navbar-item" href="/construcciones/construir">
                        Construir
                    </a>
                    <% } %>
                <% } %>
          <div class="navbar-item has-dropdown is-hoverable">
            <a class="navbar-link"> MÃ¡s </a>

            <div class="navbar-dropdown">
              <a class="navbar-item" href="/materiales"> Materiales </a>
              <a class="navbar-item" href="/herramientas/armar"> Herramientas </a>
              <a class="navbar-item"> Contact </a>
              <hr class="navbar-divider" />
              <a class="navbar-item"> Report an issue </a>
            </div>
          </div>
        </div>

        <div class="navbar-end">
          <div class="navbar-item">
            <div class="buttons">
              <% if (username == '') { %>
              <a class="button is-primary" href ="/users/signup">
                <strong>Registrarse</strong>
              </a>
              <a href="/users/login" class="button is-light"> Entrar </a>
              <% } else { %>
              <span> Hola <strong><%= username %> | </strong> </span>
              <a href="/users/logout" class="button is-danger"> Salir </a>
              <% } %>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <section class="section">
      <div class="container"></div>
    </section>
  </body>
</html>
